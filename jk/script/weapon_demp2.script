					if ( sys.getLocalViewPlayer() != myPlayer || pm_thirdperson.getBoolValue() ) {
						worldModel.killEffect( "fx_charge_muzzle_world" );
						worldModel.playEffect( "fx_charge_muzzle_loop_world", "muzzle", 1 );
					} else {
						if ( !ironSightsEnabled ) {
							fx2 = spawnClientEffect( "fx_charge_muzzle_loop" );
							if ( fx2 != $null_entity ) {
								fx2.bindToJoint( self, "muzzle", 1 );
								fx2.setEffectLooping( 1 );
							}
						}
					}
					effectPlaying = true;
				}
				*/
				powerScale = 5.0;
			}
				//setChannelPitchShift( SND_WEAPON_MOVE, powerScale * 2.f );
		}
	useAmmo(powerScale - 1);
	next_attack = sys.getTime() + DEMP2_FIRERATE;
	//launchProjectiles( numProjectiles, 0, getCurrentSpread(), 0, 1, powerScale );
	launchProjectilesAlt( DEMP2_NUMPROJECTILES, spread, 0, 1.0, powerScale );
	playAnim( ANIMCHANNEL_ALL, "fire_alt" );
	waitUntil( animDone( ANIMCHANNEL_ALL, DEMP2_FIRE_TO_IDLE ) );
	weaponState( "Idle", DEMP2_FIRE_TO_IDLE );
}

void weapon_demp2::ExitCinematic() {
	next_attack = 0;
	weaponState( "Idle", 0 );
}

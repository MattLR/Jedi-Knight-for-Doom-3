			sys.waitFrame();

			if ( !WEAPON_ATTACK_ALT || WEAPON_LOWERWEAPON ) {
				break;
			}

			powerScale = powerScale + ( sys.getFrameTime() * 1.6f );
			if ( powerScale > 5.0 ) {
				/*

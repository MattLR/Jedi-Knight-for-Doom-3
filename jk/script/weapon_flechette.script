#define FLECHETTE_FIRERATE			0.4
#define FLECHETTE_LOWAMMO			4
#define FLECHETTE_NUMPROJECTILES	6

// blend times
#define FLECHETTE_IDLE_TO_LOWER	2
#define FLECHETTE_IDLE_TO_FIRE		1
#define	FLECHETTE_IDLE_TO_RELOAD	3
#define FLECHETTE_RAISE_TO_IDLE	3
#define FLECHETTE_FIRE_TO_IDLE		4
#define FLECHETTE_RELOAD_TO_IDLE	4

object weapon_flechette : weapon_base {
	float		next_attack;
	float		spread;
	
	void		init();
	
	void		Lower();
	void		Raise();
	void		Idle();
	void		Fire();
	void		Reload();
	void		ExitCinematic();
};

void weapon_flechette::init() {
	next_attack = 0;
	spread		= getFloatKey( "spread" );
	weaponState( "Raise", 0 );
}

void weapon_flechette::Raise() {
	weaponRising();
	playAnim( ANIMCHANNEL_ALL, "raise" );
	waitUntil( animDone( ANIMCHANNEL_ALL, FLECHETTE_RAISE_TO_IDLE ) );
	weaponState( "Idle", FLECHETTE_RAISE_TO_IDLE );
}

void weapon_flechette::Lower() {
	weaponLowering();
	playAnim( ANIMCHANNEL_ALL, "putaway" );
	waitUntil( animDone( ANIMCHANNEL_ALL, 0 ) );
	weaponHolstered();
	waitUntil( WEAPON_RAISEWEAPON );
	weaponState( "Raise", 0 );
}


void weapon_flechette::Fire() {
	float ammoClip;

	next_attack = sys.getTime() + FLECHETTE_FIRERATE;
	
	ammoClip = ammoInClip();
	if ( ammoClip == FLECHETTE_LOWAMMO ) {
		startSound( "snd_lowammo", SND_CHANNEL_ITEM, true );
	}

	launchProjectiles( FLECHETTE_NUMPROJECTILES, spread, 0, 1.0, 1.0 );
	playAnim( ANIMCHANNEL_ALL, "fire" );
	waitUntil( animDone( ANIMCHANNEL_ALL, FLECHETTE_FIRE_TO_IDLE ) );
	weaponState( "Idle", FLECHETTE_FIRE_TO_IDLE );
}

void weapon_flechette::Reload() {
	weaponReloading();
	playAnim( ANIMCHANNEL_ALL, "reload" );
	waitUntil( animDone( ANIMCHANNEL_ALL, FLECHETTE_RELOAD_TO_IDLE ) );
	addToClip( clipSize() );
	weaponState( "Idle", FLECHETTE_RELOAD_TO_IDLE );
}

void weapon_flechette::ExitCinematic() {
	next_attack = 0;
	weaponState( "Idle", 0 );
}
